  <h1>Ventas por Ruta</h1>
  <form action="venta-por-ruta" method="get">
    <div class="mb-3">
      <label for="fecha" class="form-label">Seleccione una fecha:</label>
      <input type="date" class="form-control" id="fecha" name="fecha" value="<%= fechaSeleccionada %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Ver Ventas</button>
  </form>
  
  <% if (fechaSeleccionada) { %>
    <table class="table">
      <thead>
        
      </thead>
      <% if (ventasPorRuta && ventasPorRuta.length) { %>
        <table>
          <thead>
            <tr>
              <th>Avenida</th>
              <th>Calle</th>
              <th>Ventas por Ruta</th>
            </tr>
          </thead>
          <tbody>
            <% ventasPorRuta.forEach(ruta => { %>
              <tr>
                <td><%= ruta.av_ruta %></td>
                <td><%= ruta.ca_ruta %></td>
                <td><%= ruta['Ventas por Ruta'] %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No hay datos disponibles.</p>
      <% } %>
      
      </tbody>
    </table>
  <% } %>
