  <h1>Nóminas de Vendedores</h1>

  <form action="pago-vendedor" method="GET">
    <label for="fecha_pago">Seleccione la fecha de pago:</label>
    <input type="date" id="fecha_pago" name="fecha_pago">
    <button type="submit">Filtrar</button>
  </form>

  <% if (typeof nominas !== 'undefined' && nominas.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>ID Nómina</th>
          <th>Nombre</th>
          <th>Cargo</th>
          <th>Monto</th>
          <th>Fecha de Pago</th>
        </tr>
      </thead>
      <tbody>
        <% nominas.forEach(nomina => { %>
          <tr>
            <td><%= nomina.id_nomina %></td>
            <td><%= nomina.nom_persona %></td>
            <td><%= nomina.de_cargo %></td>
            <td><%= nomina.monto %></td>
            <td><%= new Date(nomina.fecha_pago).toLocaleDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else if (typeof nominas !== 'undefined' && nominas.length === 0) { %>
    <p>No hay nóminas registradas para la fecha seleccionada.</p>
  <% } %>
