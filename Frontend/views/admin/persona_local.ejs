  <h1>Personas y Locales Asociados</h1>
  
  <!-- Formulario para asociar una persona con un local -->
  <form action="persona_local" method="post">
    <select name="id_persona" required>
      <% personas.forEach(function(persona) { %>
        <option value="<%= persona.id_persona %>"><%= persona.nom_persona %></option>
      <% }) %>
    </select>
    <select name="id_local" required>
      <% locales.forEach(function(local) { %>
        <option value="<%= local.id_local %>"><%= local.nom_local %></option>
      <% }) %>
    </select>
    <button type="submit">Asociar Persona con Local</button>
  </form><br>
  <table>
    <thead>
      <tr>
        <th>Persona</th>
        <th>Local</th>
      </tr>
    </thead>
    <tbody>
      <% personaLocal.forEach(function(pl) { 
        let persona = personas.find(p => p.id_persona === pl.id_persona);
        let local = locales.find(l => l.id_local === pl.id_local); 
      %>
      <tr>
        <td><%= persona ? persona.nom_persona : 'Persona no encontrada' %></td>
        <td><%= local ? local.nom_local : 'Local no encontrado' %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
