    <h1>Crear Factura</h1>


<form action="factura" method="post">
  <div>
    <label for="id_persona_cliente">Cliente:</label>
    <select name="id_persona_cliente" id="id_persona_cliente" required>
      <% clientes.forEach(function(cliente) { %>
        <option value="<%= cliente.id_persona %>"><%= cliente.nom_persona %></option>
      <% }); %>
    </select>
  </div>

  <div>
    <label for="id_persona_vendedor">Vendedor:</label>
    <select name="id_persona_vendedor" id="id_persona_vendedor" required>
      <% vendedores.forEach(function(vendedor) { %>
        <option value="<%= vendedor.id_persona %>"><%= vendedor.nom_persona %></option>
      <% }); %>
    </select>
  </div>

  <div>
    <label for="id_local">Local:</label>
    <select name="id_local" id="id_local" required>
      <% local.forEach(function(local) { %>
        <option value="<%= local.id_local %>">
          <%= local.nom_local %> 
        </option>
      <% }); %>
    </select>
  </div>

  <div>
    <label for="fe_factura">Fecha de Factura:</label>
    <input type="date" name="fe_factura" id="fe_factura" required>
  </div>

  <div>
    <input type="submit" value="Crear Factura">
  </div>
</form>
