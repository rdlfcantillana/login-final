<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registrar Mora</title>
    <!-- Incluye aquí tus archivos CSS u otros archivos de cabecera necesarios -->
</head>
<link rel="stylesheet" href="/css/user-style-cargo.css">
<body>
    <h1>Registrar Mora</h1>

    <!-- Formulario para registrar una nueva mora -->
    <form action="crear-mora" method="post">
        <label for="id_deuda">ID de Deuda:</label>
        <select name="id_deuda" id="id_deuda" required>
            <% deudas.forEach(deuda => { %>
                <option value="<%= deuda.id_deuda %>">Deuda <%= deuda.id_deuda %>, Factura <%= deuda.id_factura %></option>
            <% }); %>
        </select>

        <label for="fecha_inicio_mora">Fecha de Inicio de Mora:</label>
        <input type="date" id="fecha_inicio_mora" name="fecha_inicio_mora" required>
        
        <label for="tasa_interes">Tasa de Interés (%):</label>
        <input type="text" id="tasa_interes" name="tasa_interes" required>
        
        <label for="estado">Estado:</label>
        <select name="estado" id="estado" required>
            <option value="pendiente">Pendiente</option>
            <option value="pagada">Pagada</option>
            <!-- Agrega más opciones de estado si es necesario -->
        </select>

        <label for="monto_interes_acumulado">Monto de Interés Acumulado:</label>
        <input type="text" id="monto_interes_acumulado" name="monto_interes_acumulado" required>

        <label for="fecha_ultimo_calculo">Fecha del Último Cálculo:</label>
        <input type="date" id="fecha_ultimo_calculo" name="fecha_ultimo_calculo" required>

        <input type="submit" value="Registrar Mora">
    </form>




</body>
</html>
